<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/border"
    android:padding="10dip">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="10dip">



        <TextView
            android:id="@+id/tvnamemonhoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="CĐ lập trình trên thiết bị di động"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />



    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip">

    <TextView
        android:id="@+id/tvdiem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Điểm lần 1                                            5"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tvdiem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Điểm lần 2                                            5"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tvgiuaky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Điểm giữa kỳ                                        5"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tvcuoiky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Điểm cuối kỳ                                        5"
        android:textColor="@color/black"
        android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="10dip">




        <TextView
            android:id="@+id/tvtinchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tín chỉ : "
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvtongket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dip"
            android:text="Trung Bình : 10.0 "
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>